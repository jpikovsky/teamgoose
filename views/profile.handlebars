    <tr><td>Confirm New Password: </td>  <td><input type="password" name="confirm"> </td></tr>
    <tr><td><button>Update</button></td></tr>
  </form>
</table><br>
<form method="get" action="/user/profile/delete">
<button>Delete Account</button>
</form>
