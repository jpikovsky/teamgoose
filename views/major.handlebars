<h1>Major</h1>

<form method="post" action="/major/select">
  <label>Major:</label>
  <select name="major">
    <option value=""></option>
    {{#each majors}}
      <option>{{this.major}}</option>
    {{/each}}
  </select>
  <button name="selection" value="major"> Choose </button>
  <br>
  <label>Concentration:</label>
  <select name="concentration">    
    <option value=""></option>
    {{#each concentrations}}
      <option>{{this.concentration}}</option>
    {{/each}}
  </select>
  <button name="selection" value="concentration"> Choose </button>
</form>
<br>
<div> Selected Major : {{major}} </div>
<div> Selected Concentration : {{concentration}} </div>
<table>
  <tr>
    <td>
      Requirements:
    </td>
    <td>
      Course:
    </td>
    <td>
      Satisfied:
    </td>
  </tr>
  {{#each courses}}
    <tr>
      <td>
        {{req_num}}
      </td>
      <td>
        {{course_id}}
      </td>
      <td>
        No
      </td>
    </tr>
  {{/each}}
</table>