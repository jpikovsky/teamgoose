<h1>Add Course</h1>

<div>{{message}}</div>
<br>
<form method="post" action="/courses/select">
  <label>Department:</label>
  <select name="dept">
    <option value={{dept}}>{{dept}}</option>
    {{#each depts}}
      <option value={{this.dept}}>{{this.dept}}</option>
    {{/each}}
  </select>
  <button name="selection"> Choose </button>
  <br>
  </form>
{{#if courses}}
<form method="post" action="/courses/add">
  <label>Number:</label>
    <select name="num">
    <option value=""></option>
    {{#each courses}}
      <option value={{this.num}}>{{this.num}}</option>
    {{/each}}

  </select>
    <input type="hidden" name="dept" value={{dept}} />
    <input type="submit" value="Add Course" />
</form>
{{/if}}

<h2>Your Courses</h2>
<table>
  <tr>
    <td>
      Department:
    </td>
    <td>
      Number:
    </td>
    <td>
      Credits
    </td>
  </tr>
  {{#each user_courses}}
    <tr>
      <td>
        {{this.dept}}
      </td>
      <td>
        {{this.num}}
      </td>
      <td>
        {{this.credits}}
      </td>
    </tr>
  {{/each}}
</table>