<h1>Add Course</h1>

<div>{{message}}</div>
<br>
<form method="post" action="/courses/add">
  <label>Department:</label>
  <select name="dept">
    <option value=""></option>
    {{#each depts}}
      <option value={{this.dept}}>{{this.dept}}</option>
    {{/each}}
  </select>
  <br>
  <label>Number:</label>
    <input type="text" name="num"> <br>
  <button>Add Course</button>
</form>

<h2>Your Courses</h2>
<table>
  <tr>
    <td>
      Department:
    </td>
    <td>
      Number:
    </td>
    <td>
      Credits
    </td>
  </tr>
  {{#each courses}}
    <tr>
      <td>
        {{this.dept}}
      </td>
      <td>
        {{this.num}}
      </td>
      <td>
        {{this.credits}}
      </td>
    </tr>
  {{/each}}
</table>